---
import Layout from '../layouts/Layout.astro'
import Badge from '../components/Badge.astro'
import SectionContainer from '../components/SectionContainer.astro'
import SocialPill from '../components/SocialPill.astro'
import LinkedIn from '../icons/LinkedIn.astro'
import GitHub from '../icons/GitHub.astro'
import MailIcon from '../icons/MailIcon.astro'
import Briefcase from '../icons/Briefcase.astro'
import Experience from '../components/Experience.astro'
---

<Layout title="Portfolio de Agustin López. Desarrollador y programador web."
				description='Contrata a Agustin para desarrollar tu proyecto.'>
	<main>
		<SectionContainer class="py-44 pb-24">
			<img 
				class="size-12 mb-8"
				src="../avatar.svg" 
				alt="agustin perfil"
			/>
			<h1 
				class="text-white text-5xl pb-6 font-bold flex flex-row gap-x-4" >
				Hola, soy Agustín 
			</h1>
				<a 
					href="https://www.linkedin.com/in/agustin-lopez-prieto/" 
					target="_blank"
					rel="noopener"
					class="block mb-6 w-[157px]"
					>
					<Badge>Disponible para trabajar</Badge>
				</a>
			<h2 class="text-2xl">
				Analista en computación. Graduado de la Universidad Nacional de Río Cuarto. <span class="text-blue-300">Desarrollador.</span>
			</h2>
			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://www.linkedin.com/in/agustin-lopez-prieto/">
					<LinkedIn class="size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/aguslopezp">
					<GitHub class="size-6"/>
					GitHub
				</SocialPill>
				<SocialPill >
					<MailIcon class="size-6"/>
					agustinlopezprieto@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="flex gap-x-2 items-center text-2xl font-semibold mb-6">
				<Briefcase class="size-6"/>
				Proyectos
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>

